<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SproutlyController">
   <children>
      <Label text="Create Account" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
         <font>
            <Font size="75.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Username:" />
                  <TextField fx:id="createAccountUsernameField" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Password:" />
                  <TextField fx:id="createAccountPasswordField" />
               </children>
            </HBox>
         </children>
      </HBox>
      <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#createAccount" text="Create Account" />
      <Hyperlink fx:id="loginLink" onAction="#openLoginMenu" text="I already have an account...">
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </Hyperlink>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
